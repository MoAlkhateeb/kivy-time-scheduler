#:kivy 2.2.1

<CourseGroup>:
    slots: slots
    course_label: course_label
    MDFloatLayout:
        MDLabel:
            id: course_label
            markup: True
            pos_hint: {"center_x": 0.5, "top": 0.9}
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'

        MDBoxLayout: 
            id: slots
            orientation: "vertical"


<AddCourseGroup>:
    rows: 1
    padding: "10dp"
    spacing: "4dp"

    MDTextField:
        id: course_identifier
        size_hint: 0.8, 1
        elevation: 2
        hint_text: "Course Identifier"
        mode: "rectangle"
        on_text: root.validate_course(course_identifier, course_submit)

    MDFillRoundFlatIconButton: 
        id: course_submit
        text: "Course"
        icon: "plus"
        size_hint: 0.2, 0.9
        elevation: 2
        disabled: True
        on_release: app.add_new_course(course_identifier)