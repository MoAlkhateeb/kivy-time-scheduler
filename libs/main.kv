#:kivy 2.2.1

MDBoxLayout:
    course_grid: course_grid

    orientation: "vertical"
    MDTopAppBar:
        title: "Course Scheduler"

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "adding_screen"
            text: "Courses"
            icon: "book-plus-multiple-outline"

            MDFloatLayout:

                AddCourseGroup:
                    pos_hint: {"top": 1}
                    size_hint: 1, None
                    height: "80dp"

                MDScrollView:
                    do_scroll_x: False
                    bar_width: 0
                    pos_hint: {"top": 0.82}
                    size_hint: 1, 0.82      
                    MDGridLayout:
                        id: course_grid
                        cols: 1
                        adaptive_height: True
                        padding: "10dp"
                        spacing: "10dp"

        MDBottomNavigationItem:
            name: "viewing_screen"
            text: "Schedules"
            icon: "timetable"

        MDBottomNavigationItem:
            name: "settings_screen"
            text: "Settings"
            icon: "tune-vertical"